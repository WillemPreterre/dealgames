{% extends 'base.html.twig' %}

{% block title %}Annonce index{% endblock %}

{% block body %}
    <h1>Annonce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Annonce_title</th>
                <th>Annonce_description</th>
                <th>Annonce_date</th>
                <th>Annonce_date_modif</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td>{{ annonce.id }}</td>
                <td>{{ annonce.annonceTitle }}</td>
                <td>{{ annonce.annonceDescription }}</td>
                <td>{{ annonce.annonceDate ? annonce.annonceDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ annonce.annonceDateModif ? annonce.annonceDateModif|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}">show</a>
                    <a href="{{ path('app_annonce_edit', {'id': annonce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
